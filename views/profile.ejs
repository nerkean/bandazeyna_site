                    <div class="achievements-list">
                        <% if (typeof achievements !== 'undefined' && achievements.length > 0) { %>
                            <% achievements.forEach(ach => { %>
                                <div class="ach-tag" title="<%= ach.details.description %>">
                                    <%= ach.details.medalEmoji %> <%= ach.details.name %>
