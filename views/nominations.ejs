    }

    [data-aos] {
        opacity: 0;
        transition-property: opacity, transform;
    }
    [data-aos].aos-animate {
        opacity: 1;
    }

    .privacy-card {
        background: rgba(88, 101, 242, 0.05);
        border: 1px solid rgba(88, 101, 242, 0.2);
        padding: 20px 25px;
        border-radius: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        backdrop-filter: blur(10px);
    }
    .pc-info h4 { margin: 0 0 5px; font-size: 1rem; color: var(--primary); }
    .pc-info p { margin: 0; font-size: 0.85rem; color: #888; max-width: 80%; }
    
    .switch { position: relative; display: inline-block; width: 50px; height: 26px; }
    .switch input { opacity: 0; width: 0; height: 0; }
    .slider { position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0; background-color: #333; transition: .4s; border-radius: 34px; }
    .slider:before { position: absolute; content: ""; height: 18px; width: 18px; left: 4px; bottom: 4px; background-color: white; transition: .4s; border-radius: 50%; }
    input:checked + .slider { background-color: var(--primary); }
    input:checked + .slider:before { transform: translateX(24px); }

    @media (max-width: 768px) {
        .privacy-card { flex-direction: row; padding: 15px; }
        .pc-info p { font-size: 0.75rem; max-width: 100%; }
    }

    .countdown-finished {
        font-size: 2rem;
        font-weight: 900;
        color: #ef4444; 
        text-transform: uppercase;
        letter-spacing: 3px;
        text-shadow: 0 0 20px rgba(239, 68, 68, 0.5);
        padding: 20px 40px;
        border: 2px solid rgba(239, 68, 68, 0.3);
        border-radius: 20px;
        background: rgba(239, 68, 68, 0.05);
        backdrop-filter: blur(5px);
        display: inline-block;
        margin-top: 10px;
        animation: pulseError 2s infinite alternate ease-in-out;
    }

    @keyframes pulseError {
        from {
            transform: scale(1);
            box-shadow: 0 0 10px rgba(239, 68, 68, 0.2);
        }
        to {
            transform: scale(1.02);
            box-shadow: 0 0 30px rgba(239, 68, 68, 0.4);
        }
    }

    @media (max-width: 768px) {
        .countdown-finished {
            font-size: 1.2rem;
            padding: 15px 25px;
            letter-spacing: 1px;
        }
    }
</style>
