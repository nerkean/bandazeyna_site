<!DOCTYPE html>
<html lang="ru">
<head>
    <%- include('../partials/head', { title: 'Broadcast Control' }) %>
    <script src="/socket.io/socket.io.js"></script>
    <style>
        .control-container { padding: 120px 5% 50px; background: #0b0d11; min-height: 100vh; }
        .nom-card { 
            background: #1a1d24; border: 1px solid #2d323d; padding: 25px; 
            border-radius: 20px; margin-bottom: 15px; display: flex; align-items: center;
            transition: 0.3s;
        }
        .nom-card.active-nom { border-color: #5865F2; background: #1e2331; box-shadow: 0 0 20px rgba(88,101,242,0.2); }
        
        .nom-info { flex-grow: 1; }
        .leader-badge { 
            background: rgba(255, 215, 0, 0.1); color: #FFD700; padding: 4px 12px; 
            border-radius: 6px; font-size: 0.75rem; font-weight: 800; display: inline-block; margin-top: 8px;
        }

        .btn-group { display: flex; gap: 8px; }
        .btn-ctrl { 
            padding: 12px 18px; border-radius: 10px; border: none; cursor: pointer;
            font-weight: 800; font-size: 0.75rem; text-transform: uppercase;
        }
        .btn-show { background: #5865F2; color: #fff; }
        .btn-winner { background: #FFD700; color: #000; }
        .btn-stats { background: #2ecc71; color: #fff; }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>
    <main class="control-container">
        <header style="display: flex; justify-content: space-between; margin-bottom: 40px;">
            <h1><i class="fas fa-satellite-dish"></i> –≠–§–ò–†: AWARDS 2025</h1>
            <button class="btn-ctrl" style="background: #ef4444; color: #fff;" onclick="sendAction('clear')">–û–ß–ò–°–¢–ò–¢–¨ –≠–ö–†–ê–ù</button>
        </header>

        <div class="noms-list">
    <% nominations.forEach(nom => { %>
        <div class="nom-card" id="card-<%= nom._id %>">
            <div class="nom-info">
                <span style="color: #ff0055; font-weight: bold; font-size: 0.8rem;"><%= nom.category %></span>
                <h3><%= nom.title %></h3>
                <p style="color: #bbb; margin-bottom: 5px;"><%= nom.description %></p>
                
                <div class="leader-badge" style="background: rgba(88, 101, 242, 0.2); border: 1px solid #5865F2;">
                    <i class="fas fa-check-circle"></i> –õ–ò–î–ï–†: 
                    <strong><%= nom.leader ? nom.leader.username : '???' %></strong> 
                    (<%= nom.leader ? nom.leader.voteCount : 0 %> üó≥Ô∏è)
                </div>
            </div>
            <div class="btn-group">
                <button class="btn-ctrl btn-show" onclick="setActive('<%= nom._id %>'); sendAction('show_nomination', '<%= nom._id %>')">1. –≠–ö–†–ê–ù</button>
                <button class="btn-ctrl btn-winner" onclick="sendAction('reveal_winner', '<%= nom._id %>')">2. –ü–û–ë–ï–î–ê</button>
                <button class="btn-ctrl btn-stats" onclick="sendAction('show_stats', '<%= nom._id %>')">3. –¶–ò–§–†–´</button>
            </div>
        </div>
    <% }) %>
</div>
    </main>

    <script>
        const socket = io();
        function setActive(id) {
            document.querySelectorAll('.nom-card').forEach(c => c.classList.remove('active-nom'));
            document.getElementById('card-' + id).classList.add('active-nom');
        }
        async function sendAction(action, nomId = null) {
            let data = { action };
            if (nomId) {
                const res = await fetch(`/api/nominations/stream-data/${nomId}`);
                const result = await res.json();
                data.nomination = result.nomination;
                data.winnerId = result.winnerId;
            }
            socket.emit('admin_control', data);
        }
    </script>
</body>
</html>