<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel | Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin.css"> 
    <style>
        /* Доп стили для табов и отзывов */
        .admin-tabs { display: flex; gap: 20px; margin-bottom: 30px; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 10px; }
        .tab-btn { background: none; border: none; color: #666; font-size: 1.2rem; font-weight: 800; cursor: pointer; padding: 10px 20px; transition: 0.3s; }
        .tab-btn.active { color: #fff; border-bottom: 3px solid #5865F2; }
        .tab-content { display: none; }
        .tab-content.active { display: grid; }

        /* Карточка отзыва */
        .fb-admin-card { background: #1a1d24; border: 1px solid rgba(255,255,255,0.05); border-radius: 16px; padding: 20px; display: flex; flex-direction: column; gap: 10px; }
        .fb-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px; }
        .fb-stars { color: #FFD700; font-size: 1.2rem; letter-spacing: 2px; }
        .fb-user { display: flex; align-items: center; gap: 10px; color: #fff; font-weight: 700; }
        .fb-comment { background: rgba(255,255,255,0.03); padding: 10px; border-radius: 8px; color: #ccc; font-size: 0.9rem; line-height: 1.5; }
        .fb-date { font-size: 0.75rem; color: #666; margin-top: auto; text-align: right; }
    </style>
</head>
<body>
    
    <div class="admin-wrapper">
        <header class="admin-header">
            <div class="header-left">
                <i class="fas fa-shield-alt"></i> ADMIN PANEL
            </div>
            <div class="header-right">
                <a href="/" class="btn-exit"><i class="fas fa-sign-out-alt"></i> Выход</a>
            </div>
        </header>

        <div class="admin-tabs">
            <button class="tab-btn active" onclick="switchTab('apps')">Заявки (<%= applications.length %>)</button>
            <button class="tab-btn" onclick="switchTab('feedbacks')">Отзывы (<%= feedbacks.length %>)</button>
        </div>

        <div id="tab-apps" class="tab-content active apps-grid">
            <% if (applications.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-check-circle"></i>
                    <p>Все заявки разобраны!</p>
                </div>
            <% } %>

            <% applications.forEach(app => { %>
                <div class="app-card status-<%= app.status %>">
                    <div class="app-header">
                        <span class="app-id">ID: <%= app.uid %></span>
                        <span class="app-date"><%= new Date(app.createdAt).toLocaleDateString() %></span>
                    </div>
                    <div class="app-user">
                        <div class="user-icon"><i class="fab fa-discord"></i></div>
                        <h3><%= app.discordUsername %></h3>
                    </div>
                    <div class="app-reason">
                        <label>Причина:</label>
                        <p>"<%= app.reason %>"</p>
                    </div>
                    <div class="app-footer">
                        <% if (app.status === 'pending') { %>
                            <button class="btn-action approve" onclick="processApp('<%= app._id %>', 'approve')"><i class="fas fa-check"></i> Принять</button>
                            <button class="btn-action reject" onclick="processApp('<%= app._id %>', 'reject')"><i class="fas fa-times"></i> Отказать</button>
                        <% } else { %>
                            <div class="status-badge <%= app.status %>">
                                <%= app.status === 'approved' ? 'ПРИНЯТ' : 'ОТКЛОНЕН' %>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>

        <div id="tab-feedbacks" class="tab-content apps-grid">
            <% if (feedbacks.length === 0) { %>
                <p style="color: #666; grid-column: 1/-1; text-align: center;">Отзывов пока нет.</p>
            <% } %>

           <% feedbacks.forEach(fb => { %>
                <div class="fb-admin-card">
                    <div class="fb-header">
                        <div class="fb-user">
                            <div class="user-icon"><i class="fas fa-user"></i></div>
                            <%= fb.username %>
                        </div>
                        <div class="fb-date">
                            <%= new Date(fb.createdAt).toLocaleDateString() %>
                        </div>
                    </div>

                    <div class="fb-ratings-grid" style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 10px; margin-bottom: 10px; text-align: center; background: rgba(0,0,0,0.2); padding: 10px; border-radius: 8px;">
                        <div>
                            <div style="font-size: 0.7rem; color: #999;">ДИЗАЙН</div>
                            <div style="color: #FFD700; font-weight: bold;">★ <%= fb.ratings.design %></div>
                        </div>
                        <div>
                            <div style="font-size: 0.7rem; color: #999;">ФУНКЦИОНАЛ</div>
                            <div style="color: #5865F2; font-weight: bold;">★ <%= fb.ratings.tech %></div>
                        </div>
                        <div>
                            <div style="font-size: 0.7rem; color: #999;">ИДЕЯ</div>
                            <div style="color: #2ecc71; font-weight: bold;">★ <%= fb.ratings.idea %></div>
                        </div>
                    </div>

                    <div class="fb-comment">
                        <%= fb.comment %>
                    </div>
                </div>
            <% }) %>
        </div>

    </div>

   <script>
        function switchTab(tabName) {
            // Убираем актив у всех кнопок и контента
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

            // Включаем нужное (индекс 0 для apps, 1 для feedbacks - но лучше по onclick this)
            event.target.classList.add('active');
            document.getElementById('tab-' + tabName).classList.add('active');
        }

        async function processApp(appId, action) {
            if (!confirm(`Вы уверены, что хотите ${action === 'approve' ? 'ПРИНЯТЬ' : 'ОТКЛОНИТЬ'} эту заявку?`)) return;

            try {
                const res = await fetch('/api/admin/application', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ appId, action })
                });
                
                const data = await res.json();

                if (res.ok) {
                    if (action === 'approve' && data.generatedPassword) {
                        prompt(
                            `✅ Заявка принята!\n\nСкопируйте этот пароль и отправьте пользователю ${appId} в ЛС:\n\nПароль:`, 
                            data.generatedPassword
                        );
                    } else {
                        alert('Заявка отклонена.');
                    }
                    location.reload();
                } else {
                    alert('Ошибка: ' + (data.error || 'Неизвестная ошибка'));
                }
            } catch (e) {
                console.error(e);
                alert('Ошибка соединения');
            }
        }
    </script>
</body>
</html>