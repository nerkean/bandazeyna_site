    <style>
        :root {
            --star-color: #4b5563;
            --star-active: #FFD700;
            --card-bg: #16181e;
            --border: rgba(255, 255, 255, 0.08);
        }

        body { background-color: #0b0d12; font-family: 'Montserrat', sans-serif; }

        .fb-wrapper {
            max-width: 700px;
            margin: 120px auto 60px;
            padding: 0 20px;
        }

        /* CARD DESIGN */
        .fb-card {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
            position: relative;
            overflow: hidden;
        }

        /* –î–µ–∫–æ—Ä–∞—Ç–∏–≤–Ω—ã–π —Ñ–æ–Ω */
        .fb-card::before {
            content: '';
            position: absolute;
            top: -50%; left: -50%;
            width: 200%; height: 200%;
            background: radial-gradient(circle, rgba(88, 101, 242, 0.05) 0%, transparent 60%);
            pointer-events: none;
        }

        .fb-header { text-align: center; margin-bottom: 30px; position: relative; z-index: 2; }
        .fb-header h1 { font-size: 2.5rem; font-weight: 900; color: #fff; margin-bottom: 10px; }
        .fb-header p { color: #9ca3af; font-size: 1rem; }

        /* RATINGS GRID */
        .ratings-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-bottom: 30px;
            position: relative; z-index: 2;
        }

        .rating-row {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.05);
            padding: 15px 20px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: 0.3s;
        }
        
        .rating-row:hover { background: rgba(255, 255, 255, 0.06); border-color: rgba(255, 255, 255, 0.1); }

        .rating-label {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #fff;
            font-weight: 700;
            font-size: 1.1rem;
        }
        .rating-label i { color: #5865F2; font-size: 1.2rem; }

        /* STARS LOGIC */
        .star-group {
            display: flex;
            flex-direction: row-reverse; /* –í–∞–∂–Ω–æ –¥–ª—è CSS-—Å–µ–ª–µ–∫—Ç–æ—Ä–æ–≤ */
            gap: 8px;
        }
        
        .star-group input { display: none; }
        
        .star-group label {
            font-size: 2rem;
            color: var(--star-color);
            cursor: pointer;
            transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        /* –≠—Ñ—Ñ–µ–∫—Ç—ã –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏ –∏ –≤—ã–±–æ—Ä–µ */
        .star-group label:hover,
        .star-group label:hover ~ label,
        .star-group input:checked ~ label {
            color: var(--star-active);
            text-shadow: 0 0 15px rgba(255, 215, 0, 0.4);
            transform: scale(1.1);
        }

        /* TEXTAREA */
        .comment-box { position: relative; z-index: 2; }
        .comment-box label { display: block; color: #fff; font-weight: 700; margin-bottom: 10px; font-size: 1.1rem; }
        
        textarea {
            width: 100%;
            background: rgba(0, 0, 0, 0.2);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 20px;
            color: #fff;
            font-family: 'Montserrat', sans-serif;
            font-size: 1rem;
            resize: vertical;
            min-height: 120px;
            transition: 0.3s;
        }
        textarea:focus {
            outline: none;
            border-color: #5865F2;
            background: rgba(0, 0, 0, 0.4);
            box-shadow: 0 0 20px rgba(88, 101, 242, 0.1);
        }

        /* BUTTON */
        .btn-submit {
            width: 100%;
            margin-top: 30px;
            background: linear-gradient(45deg, #5865F2, #4752c4);
            color: white;
            border: none;
            padding: 18px;
            font-size: 1.1rem;
            font-weight: 800;
            text-transform: uppercase;
            border-radius: 16px;
            cursor: pointer;
            transition: 0.3s;
            position: relative; z-index: 2;
            box-shadow: 0 10px 30px rgba(88, 101, 242, 0.3);
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(88, 101, 242, 0.5);
        }

        /* MOBILE */
        @media (max-width: 600px) {
            .rating-row { flex-direction: column; align-items: flex-start; gap: 10px; }
            .star-group { width: 100%; justify-content: space-between; }
            .fb-header h1 { font-size: 2rem; }
        }
    </style>
</head>
