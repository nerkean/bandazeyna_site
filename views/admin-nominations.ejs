<!DOCTYPE html>
<html lang="ru">
<head>
    <%- include('partials/head', { title: 'Управление Номинациями' }) %>
    <style>
        :root {
            --accent: #5865F2;
            --success: #2ecc71;
            --danger: #ef4444;
            --bg-card: #12141a;
            --bg-item: #1a1d24;
            --border: rgba(255, 255, 255, 0.08);
        }

        body { background: #050505; color: #fff; font-family: 'Montserrat', sans-serif; }
        .admin-wrapper { padding: 120px 5% 50px; max-width: 1100px; margin: 0 auto; }
        
        h1 { font-weight: 900; letter-spacing: -1px; margin-bottom: 30px; display: flex; align-items: center; gap: 15px; }
        h1 i { color: var(--accent); }

        /* --- КАРТОЧКА СОЗДАНИЯ --- */
        .create-card {
            background: var(--bg-card); border: 1px solid var(--border);
            padding: 25px; border-radius: 20px; margin-bottom: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
        .create-card h3 { margin-top: 0; margin-bottom: 20px; font-size: 1.1rem; text-transform: uppercase; letter-spacing: 1px; color: var(--accent); }

        .form-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; }
        .form-group { margin-bottom: 15px; }
        .form-label { display: block; margin-bottom: 8px; color: #888; font-size: 0.75rem; font-weight: 700; text-transform: uppercase; }
        
        .form-input, .form-select {
            width: 100%; padding: 12px 15px; background: rgba(0,0,0,0.3);
            border: 1px solid var(--border); color: #fff; border-radius: 12px;
            font-family: inherit; transition: 0.3s; box-sizing: border-box;
        }

        /* --- СПИСОК НОМИНАЦИЙ --- */
        .noms-list { display: flex; flex-direction: column; gap: 15px; }
        .nom-item { background: var(--bg-item); border: 1px solid var(--border); border-radius: 20px; overflow: hidden; transition: 0.3s; }
        .nom-summary { padding: 20px; display: flex; align-items: center; justify-content: space-between; cursor: pointer; user-select: none; }
        .nom-summary-info { display: flex; align-items: center; gap: 20px; flex: 1; }
        .nom-title-preview { font-weight: 800; font-size: 1.1rem; }
        .nom-stats-pill { background: rgba(88, 101, 242, 0.1); color: var(--accent); padding: 4px 12px; border-radius: 50px; font-size: 0.75rem; font-weight: 800; }
        
        .order-controls { display: flex; flex-direction: column; gap: 4px; margin-right: 10px; }
        .btn-order { background: rgba(255,255,255,0.05); border: 1px solid var(--border); color: #fff; cursor: pointer; padding: 4px 8px; border-radius: 6px; font-size: 0.6rem; transition: 0.2s; }
        .btn-order:hover { background: var(--accent); }

        .nom-details { padding: 0 20px 25px; display: none; border-top: 1px solid var(--border); margin-top: 5px; padding-top: 20px; }
        .nom-item.active .nom-details { display: block; }

        /* --- КАНДИДАТЫ --- */
        .candidates-stats-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 12px; margin: 20px 0; }
        .stat-item { background: rgba(0, 0, 0, 0.2); border: 1px solid var(--border); padding: 12px; border-radius: 15px; display: flex; justify-content: space-between; align-items: center; }
        .stat-info { display: flex; align-items: center; gap: 12px; flex: 1; min-width: 0; }
        .stat-avatar-container { position: relative; width: 48px; height: 48px; flex-shrink: 0; }
        .stat-avatar { width: 100%; height: 100%; border-radius: 50%; border: 2px solid rgba(255,255,255,0.1); object-fit: cover; }
        .avatar-edit-btn { position: absolute; bottom: -2px; right: -2px; background: var(--accent); color: #fff; border: none; width: 20px; height: 20px; border-radius: 50%; font-size: 0.7rem; display: flex; align-items: center; justify-content: center; cursor: pointer; }
        
        .stat-name { font-weight: 800; font-size: 0.9rem; display: block; }
        .can-desc-input { background: transparent; border: none; border-bottom: 1px dashed #444; color: #888; font-size: 0.75rem; width: 100%; outline: none; margin-top: 4px; }
        
        .stat-count-box { text-align: center; margin-left: 10px; flex-shrink: 0; min-width: 60px; }
        .stat-count { font-size: 1.2rem; font-weight: 900; color: var(--accent); line-height: 1; }
        .stat-label { font-size: 0.6rem; text-transform: uppercase; color: #555; margin-bottom: 5px; }

        .btn-view-voters {
            background: rgba(88, 101, 242, 0.1); border: 1px solid rgba(88, 101, 242, 0.2);
            color: var(--accent); cursor: pointer; padding: 4px 10px; border-radius: 8px;
            font-size: 0.65rem; font-weight: 800; transition: 0.2s;
        }
        .btn-view-voters:hover { background: var(--accent); color: #fff; }

        /* --- МОДАЛКА ПРОГОЛОСОВАВШИХ --- */
        .voters-list-modal {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.85); backdrop-filter: blur(10px);
            z-index: 10000; display: none; align-items: center; justify-content: center;
        }
        .voters-list-modal.active { display: flex; }
        .voters-box {
            background: #15151a; border: 1px solid var(--border);
            width: 95%; max-width: 450px; border-radius: 24px;
            padding: 30px; position: relative;
        }
        .voters-title { font-weight: 900; margin-bottom: 20px; font-size: 1.1rem; display: flex; align-items: center; gap: 10px; }
        .voters-scroll { max-height: 400px; overflow-y: auto; padding-right: 10px; }
        .voters-scroll::-webkit-scrollbar { width: 4px; }
        .voters-scroll::-webkit-scrollbar-thumb { background: var(--accent); border-radius: 10px; }

        .voter-row {
            padding: 12px; background: rgba(255,255,255,0.02);
            border: 1px solid rgba(255,255,255,0.05); border-radius: 12px;
            margin-bottom: 8px; display: flex; flex-direction: column; gap: 6px;
        }
        .voter-main { display: flex; justify-content: space-between; align-items: center; }
        .voter-name { font-weight: 800; font-size: 0.9rem; color: #fff; }
        .voter-id { font-family: monospace; font-size: 0.65rem; color: #444; }
        
        .voter-details { display: grid; grid-template-columns: 1fr 1fr; gap: 10px; padding-top: 8px; border-top: 1px dashed rgba(255,255,255,0.05); }
        .detail-item { font-size: 0.65rem; color: #777; display: flex; flex-direction: column; }
        .detail-item b { color: #aaa; font-size: 0.6rem; text-transform: uppercase; margin-bottom: 2px; }
        .is-new-account { color: #ffab00 !important; font-weight: 800; }

        .btn { padding: 12px 20px; border-radius: 12px; border: none; cursor: pointer; font-weight: 800; font-size: 0.85rem; transition: 0.3s; display: inline-flex; align-items: center; gap: 8px; }
        .btn-primary { background: var(--accent); color: #fff; }
        .btn-save { background: var(--success); color: #fff; padding: 10px; border-radius: 10px; }
        .btn-danger-icon { color: var(--danger); background: transparent; padding: 5px; font-size: 1rem; border: none; cursor: pointer; }
        
        .add-can-form { display: grid; grid-template-columns: 1fr 1fr auto; gap: 10px; background: rgba(0,0,0,0.2); padding: 15px; border-radius: 15px; margin-top: 20px; }
        .chevron-icon { transition: 0.3s; color: #444; }
        .nom-item.active .chevron-icon { transform: rotate(180deg); color: var(--accent); }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="admin-wrapper">
        <h1><i class="fas fa-tasks"></i> Номинации</h1>

<div style="margin-bottom: 20px;">
    <a href="/api/admin/nominations/export-excel" class="btn btn-save" style="text-decoration: none; background: #217346;">
        <i class="fas fa-file-excel"></i> СКАЧАТЬ ТАБЛИЦУ EXCEL
    </a>
</div>
        
        <div class="create-card">
            <h3><i class="fas fa-plus-circle"></i> Новая номинация</h3>
            <form id="createForm">
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Название</label>
                        <input type="text" name="title" class="form-input" placeholder="Король года..." required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Описание</label>
                        <input type="text" name="description" class="form-input" placeholder="Слоган...">
                    </div>
                </div>
                <div class="form-grid" style="grid-template-columns: 1fr 1fr 1fr;">
                    <div class="form-group">
                        <label class="form-label">Стиль</label>
                        <select name="category" class="form-select">
                            <option value="Common">Обычная</option>
                            <option value="Gold">Золотая</option>
                            <option value="Special">Специальная</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">От кого</label>
                        <select name="origin" class="form-select">
                            <option value="staff">Стафф</option>
                            <option value="member">Участники</option>
                        </select>
                    </div>
                    <div class="form-group" style="display: flex; align-items: flex-end;">
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Создать</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="noms-list">
            <% nominations.forEach(nom => { %>
                <div class="nom-item" id="nom-<%= nom._id %>" data-id="<%= nom._id %>">
                    <div class="nom-summary" onclick="toggleNom('<%= nom._id %>')">
                        <div class="nom-summary-info">
                            <div class="order-controls" onclick="event.stopPropagation()">
                                <button class="btn-order" onclick="moveUp('<%= nom._id %>')"><i class="fas fa-chevron-up"></i></button>
                                <button class="btn-order" onclick="moveDown('<%= nom._id %>')"><i class="fas fa-chevron-down"></i></button>
                            </div>
                            <span class="nom-title-preview"><%= nom.title %></span>
                            <span class="nom-stats-pill">ГОЛОСОВ: <%= nom.totalVotes %></span>
                        </div>
                        <i class="fas fa-chevron-down chevron-icon"></i>
                    </div>

                    <div class="nom-details">
                        <div class="form-grid">
                            <div class="form-group">
                                <label class="form-label">Заголовок</label>
                                <input type="text" id="title-<%= nom._id %>" class="form-input" value="<%= nom.title %>">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Описание</label>
                                <textarea id="desc-<%= nom._id %>" class="form-input" style="min-height: 45px;"><%= nom.description %></textarea>
                            </div>
                        </div>

                        <div class="form-grid" style="grid-template-columns: 1fr 1fr auto;">
                            <div class="form-group">
                                <label class="form-label">От кого</label>
                                <select id="origin-<%= nom._id %>" class="form-select">
                                    <option value="staff" <%= nom.origin === 'staff' ? 'selected' : '' %>>Стафф</option>
                                    <option value="member" <%= nom.origin === 'member' ? 'selected' : '' %>>Участники</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Категория</label>
                                <select id="category-<%= nom._id %>" class="form-select">
                                    <option value="Common" <%= nom.category === 'Common' ? 'selected' : '' %>>Обычная</option>
                                    <option value="Gold" <%= nom.category === 'Gold' ? 'selected' : '' %>>Золотая</option>
                                    <option value="Special" <%= nom.category === 'Special' ? 'selected' : '' %>>Специальная</option>
                                </select>
                            </div>
                            <div class="form-group" style="display: flex; align-items: flex-end; gap: 10px;">
                                <button class="btn btn-save" onclick="saveInfo('<%= nom._id %>')"><i class="fas fa-save"></i></button>
                                <button class="btn-danger-icon" onclick="deleteNom('<%= nom._id %>')"><i class="fas fa-trash-alt"></i></button>
                            </div>
                        </div>

                        <hr style="border: none; border-top: 1px solid var(--border); margin: 20px 0;">

                        <label class="form-label">Кандидаты</label>
                        <div class="candidates-stats-grid">
                            <% nom.candidates.forEach((can) => { %>
                                <div class="stat-item">
                                    <div class="stat-info">
                                        <div class="stat-avatar-container">
                                            <% 
                                                let avSrc = '/assets/img/avatars/default_avatar.png';
                                                if (can.avatar) {
                                                    avSrc = can.avatar.startsWith('http') ? can.avatar : `/img/proxy/avatar/${can.userId}/${can.avatar}`;
                                                }
                                            %>
                                            <img src="<%= avSrc %>" class="stat-avatar" id="img-<%= can.userId %>">
                                            <button class="avatar-edit-btn" onclick="document.getElementById('file-<%= can.userId %>').click()">
                                                <i class="fas fa-camera"></i>
                                            </button>
                                            <input type="file" id="file-<%= can.userId %>" style="display:none" accept="image/*" 
                                                   onchange="uploadCandidateAvatar('<%= nom._id %>', '<%= can.userId %>', this)">
                                        </div>
                                        <div style="flex: 1; min-width: 0;">
                                            <span class="stat-name"><%= can.username %></span>
                                            <input type="text" value="<%= can.description || '' %>" class="can-desc-input" placeholder="Слоган..."
                                                   onchange="updateCandidateDesc('<%= nom._id %>', '<%= can.userId %>', this.value)">
                                        </div>
                                    </div>
                                    <div class="stat-count-box">
                                        <div class="stat-label">голосов</div>
                                        <div class="stat-count"><%= can.voteCount %></div>
                                        <button class="btn-view-voters" onclick="openVoters('<%= nom._id %>', '<%= can.userId %>', '<%= can.username %>')">
                                            КТО?
                                        </button>
                                    </div>
                                    <button class="btn-danger-icon" onclick="removeCandidate('<%= nom._id %>', '<%= can.userId %>')"><i class="fas fa-user-minus"></i></button>
                                </div>
                            <% }) %>
                        </div>

                        <div class="add-can-form">
                            <input type="text" id="input-id-<%= nom._id %>" class="form-input" placeholder="ID или Никнейм">
                            <input type="text" id="input-desc-<%= nom._id %>" class="form-input" placeholder="Слоган">
                            <button class="btn btn-primary" onclick="addCandidate('<%= nom._id %>')">Добавить</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <div class="voters-list-modal" id="votersModal" onclick="closeVotersModal()">
        <div class="voters-box" onclick="event.stopPropagation()">
            <div class="voters-title">
                <i class="fas fa-shield-alt" style="color:var(--accent)"></i>
                <span>Голоса за: <span id="voterTargetName" style="color:var(--accent);">---</span></span>
            </div>
            <div class="voters-scroll" id="votersContainer">
                </div>
            <button class="btn btn-primary" style="width:100%; margin-top:20px;" onclick="closeVotersModal()">Закрыть</button>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script>
        const nomsData = <%- JSON.stringify(nominations) %>;

        function toggleNom(id) {
            document.getElementById(`nom-${id}`).classList.toggle('active');
        }

        function openVoters(nomId, canId, canName) {
            const nomination = nomsData.find(n => n._id === nomId);
            if (!nomination) return;

            const voters = nomination.votes.filter(v => v.candidateId === canId);
            document.getElementById('voterTargetName').innerText = canName;
            const container = document.getElementById('votersContainer');
            
            const getDiscordCreateDate = (id) => {
                const timestamp = Number((BigInt(id) >> 22n) + 1420070400000n);
                return new Date(timestamp);
            };

            const formatDate = (date) => {
                if (!date) return 'Н/Д';
                return new Date(date).toLocaleDateString('ru-RU');
            };

            if (voters.length === 0) {
                container.innerHTML = '<div style="text-align:center; color:#444; padding:20px;">Голосов еще нет</div>';
            } else {
                container.innerHTML = voters.map(v => {
                    const createDate = getDiscordCreateDate(v.voterId);
                    const isNew = (new Date() - createDate) < (1000 * 60 * 60 * 24 * 60); // 60 дней
                    const privacyIcon = v.isPublic 
    ? '<i class="fas fa-eye" title="Публичный" style="color: #2ecc71; font-size: 0.7rem; margin-left: 5px;"></i>' 
    : '<i class="fas fa-eye-slash" title="Аноним" style="color: #555; font-size: 0.7rem; margin-left: 5px;"></i>';

                    return `
                        <div class="voter-row">
                            <div class="voter-main">
            <span class="voter-name">${v.voterUsername} ${privacyIcon}</span>
            <span class="voter-id">${v.voterId}</span>
        </div>
                            <div class="voter-details">
                                <div class="detail-item">
                                    <b>Создан (Discord)</b>
                                    <span class="${isNew ? 'is-new-account' : ''}">${formatDate(createDate)}</span>
                                </div>
                                <div class="detail-item">
                                    <b>Зашёл на сайт</b>
                                    <span>${formatDate(v.voterJoinedAt)}</span>
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');
            }

            document.getElementById('votersModal').classList.add('active');
        }

        function closeVotersModal() {
            document.getElementById('votersModal').classList.remove('active');
        }

        async function moveUp(id) {
            const el = document.getElementById(`nom-${id}`);
            const prev = el.previousElementSibling;
            if (prev && prev.classList.contains('nom-item')) {
                el.parentNode.insertBefore(el, prev);
                saveNewOrder();
            }
        }

        async function moveDown(id) {
            const el = document.getElementById(`nom-${id}`);
            const next = el.nextElementSibling;
            if (next && next.classList.contains('nom-item')) {
                el.parentNode.insertBefore(next, el);
                saveNewOrder();
            }
        }

        async function saveNewOrder() {
            const ids = Array.from(document.querySelectorAll('.nom-item')).map(el => el.dataset.id);
            await fetch('/api/admin/nominations/reorder', {
                method: 'POST', 
                headers: { 'Content-Type': 'application/json' }, 
                body: JSON.stringify({ ids })
            });
        }

        async function uploadCandidateAvatar(nominationId, candidateUserId, input) {
            if (!input.files || !input.files[0]) return;
            const formData = new FormData();
            formData.append('avatar', input.files[0]);
            formData.append('nominationId', nominationId);
            formData.append('candidateUserId', candidateUserId);

            const btn = input.previousElementSibling;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

            try {
                const res = await fetch('/api/admin/nominations/upload-candidate-avatar', { method: 'POST', body: formData });
                const data = await res.json();
                if (data.success) {
                    document.getElementById(`img-${candidateUserId}`).src = data.url;
                    btn.innerHTML = '<i class="fas fa-check"></i>';
                    setTimeout(() => btn.innerHTML = '<i class="fas fa-camera"></i>', 2000);
                } else { alert(data.error); btn.innerHTML = '<i class="fas fa-camera"></i>'; }
            } catch (e) { alert('Ошибка сети'); btn.innerHTML = '<i class="fas fa-camera"></i>'; }
        }

        document.getElementById('createForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const data = Object.fromEntries(new FormData(e.target));
            const res = await fetch('/api/admin/nominations/create', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify(data) });
            if(res.ok) location.reload();
        });

        async function saveInfo(id) {
            const data = {
                id, title: document.getElementById(`title-${id}`).value,
                description: document.getElementById(`desc-${id}`).value,
                origin: document.getElementById(`origin-${id}`).value,
                category: document.getElementById(`category-${id}`).value
            };
            const res = await fetch('/api/admin/nominations/update-info', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify(data)});
            if(res.ok) alert('Сохранено');
        }

        async function updateCandidateDesc(nomId, userId, newDesc) {
            await fetch('/api/admin/nominations/update-candidate-desc', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ nominationId: nomId, userId, description: newDesc })});
        }

        async function addCandidate(nomId) {
            const userId = document.getElementById(`input-id-${nomId}`).value.trim();
            const desc = document.getElementById(`input-desc-${nomId}`).value.trim();
            if(!userId) return;
            const res = await fetch('/api/admin/nominations/add-candidate', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ nominationId: nomId, targetUserId: userId, customDesc: desc })});
            if(res.ok) location.reload();
        }

        async function removeCandidate(nomId, userId) {
            if(!confirm('Удалить?')) return;
            const res = await fetch('/api/admin/nominations/remove-candidate', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ nominationId: nomId, candidateUserId: userId })});
            if(res.ok) location.reload();
        }

        async function deleteNom(id) {
            if(!confirm('УДАЛИТЬ?')) return;
            const res = await fetch('/api/admin/nominations/delete', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ id })});
            if(res.ok) location.reload();
        }
    </script>
</body>
</html>